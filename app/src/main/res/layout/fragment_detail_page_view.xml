<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailPageView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detailMovieImg"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/detailMovieImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Title of Movies"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/detailMovieRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:text="Author"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>